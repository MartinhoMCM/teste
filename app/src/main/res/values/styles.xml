<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="activity_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/maven_pro</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:layout_marginStart">4dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">4dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="activity_style_1">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:textSize">13sp</item>
        <item name="android:fontFamily">@font/maven_pro</item>
        <item name="android:textStyle">bold</item>

    </style>

    <style name="activity_style_2">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_below">@+id/head</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:textSize">10sp</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:fontFamily">@font/maven_pro</item>
        <item name="android:textColor">@android:color/darker_gray</item>
    </style>

    <style name="dialog_text_style_1">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:fontFamily">@font/maven_pro</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:layout_alignParentStart">true</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginBottom">20dp</item>
    </style>

    <style name="dialog_text_style_2">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:layout_marginStart">32dp</item>
        <item name="android:layout_marginEnd">32dp</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_marginBottom">20dp</item>
    </style>

    <style name="button_patter">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@android:color/black</item>
        <item name="android:layout_marginTop">8dp</item>
    </style>
</resources>

